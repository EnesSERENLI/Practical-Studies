@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="alert-danger">
        @if (TempData["message"] != null)
        {
            <p class="text-danger">@TempData["message"]</p>
        }
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ProductName</th>
                <th>Description</th>
                <th>UnitPrice</th>
                <th>UnitsInStock</th>
                <th>Status</th>
                <th><a class="btn btn-outline-primary" href="/Product/AddProduct">Add Product</a></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Description</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.UnitsInStock</td>
                    <td>@item.Status</td>
                    <td>
                        @Html.ActionLink("Update", "Update", new { id = item.ID }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                        @Html.ActionLink("AddToCart", "AddToCart", "Cart", new { id = item.ID }, new { @class = "btn btn-success" })
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

