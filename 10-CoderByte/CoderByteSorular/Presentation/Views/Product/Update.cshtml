@model Product
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="Update" method="post">
    <div class="container">
        <div class="form-control">
            @Html.ValidationMessageFor(x => x.ProductName)
            @Html.LabelFor(x => x.ProductName)
            @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })

            @Html.ValidationMessageFor(x => x.Description)
            @Html.LabelFor(x => x.Description)
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })

            @Html.ValidationMessageFor(x => x.UnitPrice)
            @Html.LabelFor(x => x.UnitPrice)
            @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control" })

            @Html.ValidationMessageFor(x => x.UnitsInStock)
            @Html.LabelFor(x => x.UnitsInStock)
            @Html.TextBoxFor(x => x.UnitsInStock, new { @class = "form-control" })

            <label>CategoryName</label>
            <select class="form-control" name="CategoryId" required>
                @foreach (var item in ViewBag.Categories)
                {
                    <option value="@item.ID">@item.CategoryName</option>
                }
            </select>

            <input type="hidden" value="@Model.ID" name="ID"/>
        </div>
        <button class="btn btn-success mt-2">Submit</button>
    </div>
</form>

