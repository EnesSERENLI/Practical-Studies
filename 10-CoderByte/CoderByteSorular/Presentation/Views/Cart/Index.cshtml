
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Presentation.Models.Cart sepet = Session["scart"] as Presentation.Models.Cart;
    decimal totalPrice = 0;
}

<section>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Ürün Ad</th>
                <th>Adet</th>
                <th>Birim fiyat</th>
                <th>Ara Toplam</th>
            </tr>
        </thead>
        <tbody>
            @if (TempData["error"] == null)
            {
                foreach (var item in sepet.myCart.ToList())
                {
                    totalPrice += item.SubTotal;
                    <tr>
                        <td>@item.ProductName</td>
                        <td>
                            <div class="input-group">
                                @Html.ActionLink("-", "Decrease", new { id = item.Id }, new { @class = "btn btn-danger" })
                                <input style="width:50px;" class="form-control-sm text-center" disabled type="number" value="@item.Quantity" />
                                @Html.ActionLink("+", "Increase", new { id = item.Id }, new { @class = "btn btn-warning" })
                            </div>
                        </td>
                        <td>@item.Price</td>
                        <td>@item.SubTotal</td>
                    </tr>
                }
            }
            else
            {
                <tr class="alert alert-info text-center">
                    <td>
                        <div class="alert alert-info text-center">
                            <h2>@TempData["error"]</h2>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <div class="row">
        <ul>

            <li style="margin-right:0px;"><strong>Genel Toplam :</strong> @totalPrice</li>
        </ul>
    </div>
    <div class="form-control">
        <a class="btn btn-danger" href="/Cart/ComplateCart">Alışverişi Tamamla</a>
        <a class="btn btn-info" onclick="javascript: window.print();">Devam Et</a>
    </div>
</section>

