
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_AddLayout.cshtml";
}

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Add Product</h3></div>
                    <div class="card-body">
                        <form method="post">
                            <div class="col-md-12 mb-3">
                                <div class="form-floating">
                                    <input class="form-control" name="ProductName" id="Productname" type="text" placeholder="Enter ProductName" />
                                    <label for="Productname">ProductName</label>
                                </div>
                            </div>
                            <div class="col-md-12 mb-3">
                                <div class="form-floating">
                                    <input class="form-control" name="CategoryID" id="CategoryId" type="number" placeholder="Enter CategoryID" />
                                    <label for="CategoryId">CategoryID</label>
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                                <input class="form-control" name="SupplierID" id="SupplierId" type="number" placeholder="Enter SupplierID" />
                                <label for="SupplierId">SupplierID</label>
                            </div>
                            <div class="col-md-12 mb-3">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" name="UnitPrice" id="Unitprice" type="number" placeholder="Enter UnitPrice" />
                                    <label for="Unitprice">UnitPrice</label>
                                </div>
                            </div>
                            <div class="col-md-12 mb-3">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" name="UnitsInStock" id="UnitInstock" type="number" placeholder="Enter UnitInStock" />
                                    <label for="UnitInstock">UnitInStock</label>
                                </div>
                            </div>
                            <div class="mt-4 mb-0">
                                <div class="d-grid">
                                    <button class="btn btn-primary btn-block">Create Product</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a class="text-dark" href="/home/index">Nortwind</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

