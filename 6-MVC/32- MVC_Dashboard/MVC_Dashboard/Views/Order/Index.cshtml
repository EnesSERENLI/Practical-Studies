@model List<MVC_Dashboard.Models.Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Orders</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/home/index">Northwind</a></li>
            <li class="breadcrumb-item active">Tables</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Order List
            </div>
            <div class="card-body">
                <a class="btn btn-primary float-end ms-3" href="/order/addorder">Add Order</a>
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>OrderID</th>
                            <th>Customer Companyname</th>
                            <th>EmployeeID</th>
                            <th>OrderDate</th>
                            <th>Ship CompanyName</th>
                            <th>Freight</th>
                            <th>ShipName</th>
                            <th>ShipCity</th>
                            <th>ShipCountry</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.OrderID</td>
                                @if (order.CustomerID != null)
                                {
                                    <td>@order.Customer.CompanyName</td>
                                }
                                else
                                {
                                    <td>NULL</td>
                                }
                                <td>@order.EmployeeID</td>
                                <td>@order.OrderDate</td>
                                @if (order.ShipVia != null)
                                {
                                    <td>@order.Shipper.CompanyName</td>
                                }
                                else
                                {
                                    <td>NULL</td>
                                }
                                <td>@order.Freight</td>
                                <td>@order.ShipName</td>
                                <td>@order.ShipCity</td>
                                <td>@order.ShipCountry</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>

