
@model List<MVC_User.Models.AppUser>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div>
        <h2>User</h2>
        <table class="table table-hover border-success w-50">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Email</th>
                    <th>Password</th>
                </tr>
            </thead>
            <tbody>
                @foreach (MVC_User.Models.AppUser user in Model)
                {
                    <tr>
                        <td>@user.ID</td>
                        <td>@user.UserName</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.Password</td>
                        <td>
                            @*<a href="`${/appsuer/details/@user.ID}`">Details</a>*@
                            <a href="details/@user.ID" class="btn btn-xs btn-primary">Details</a>
                            <a href="updateUser/@user.ID" class="btn btn-xs btn-warning">Update</a>
                            <a href="delete/@user.ID" class="btn btn-xs btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/AppUser/AddUser" class="btn btn-success">Add User</a>
    </div>
</body>
</html>
